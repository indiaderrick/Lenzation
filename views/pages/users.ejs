
<div class="columns is-multiline">
  <div class="column is-12-desktop has-text-centered">
    <br>
    <figure id="circlePic">
      <img class="image is-horizontal-center is-128x128 is-rounded" id="circlePic" src="<%= locals.currentUser.picture %>" alt="picture">
    </figure>
  </div>

  <div class="column is-12-desktop">
    <p class="has-text-centered"> @ <%= locals.currentUser.username %></p>
  </div>

  <div class="column is-12-desktop">
    <footer class="card-footer">
      <a href="#" class="card-footer-item"><p style="color: black;">Posts: 266</p></a>
      <a href="#" class="card-footer-item"><p style="color: black;">Followers: 879</p></a>
      <a href="#" class="card-footer-item"><p style="color: black;">Following: 675</p></a>
    </footer>
  </div>

  <div class="column is-12-desktop">
    <div class="columns is-multiline">
      <% addedPosts.forEach(post => { %>
        <div class="column is-4-desktop">
          <div class="card-image">
            <figure class="image is-4by3">
              <a href="/posts/<%= post.id %>"><img src="<%= post.image %>" alt=":("></a>
            </figure>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

  </div>
