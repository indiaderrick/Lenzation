<div class="columns is-multiline">
  <div class="column is-2-desktop">

  </div>
  <form class="column is-6-desktop" action="/posts" method="post">

    <div class="field column is-6-desktop">
      <label class="label" for="username"> Photo creds go to: </label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-success" name='username' value='<%= locals.currentUser.username %>' />
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <p class="help is-success">This username is available</p>
    </div>

    <div class="field column is-6-desktop">
      <label class="label" for="image">Photo URL:</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-success" type="text" name="image">
        <span class="icon is-small is-left">
          <i class="fas fa-home"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>

    

    <div class="field column is-6-desktop">
      <label class="label" for="location">Where was this taken?</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-success" type="text" name="location">
        <span class="icon is-small is-left">
          <i class="fas fa-home"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>

    <div class="field column is-6-desktop">
      <div class="control has-icons-left has-icons-right">
        <input class="input is-success" type="text" name="like" value="❤︎">
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>

    <div class="field column is-6-desktop">
      <label class="label" for="caption">Add a caption:</label>
      <div class="control">
        <textarea class="textarea" name="caption"></textarea>
      </div>
    </div>
    <div class="control column is-6-desktop">
      <button class="button is-link" >Upload image 📷</button>
    </div>
  </form>
</div>
